<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tv.dao.FriendsAskDao">
    <resultMap id="askMap" type="com.tv.vo.FriendsAskVo">
        <id property="id" column="id"></id>
        <result property="sourceId" column="source_id"></result>
        <result property="targetId" column="target_id"></result>
        <result property="status" column="status"></result>
        <association property="targetInfo" javaType="com.tv.entity.SysUserDto" columnPrefix="targetInfo_">
            <id property="id" column="id"></id>
            <result property="userName" column="user_name"/>
            <result property="nickName" column="nick_name"/>
            <result property="avatar" column="avatar"/>
        </association>
    </resultMap>
    <select id="selectAskList" parameterType="com.tv.entity.FriendsAskDto" resultMap="askMap">
        select friends_ask.*,
        targetInfo.id as targetInfo_id,
        targetInfo.nick_name as targetInfo_nick_name,
        targetInfo.user_name as targetInfo_user_name,
        targetInfo.avatar as targetInfo_avatar
        from friends_ask
        left join sys_users as targetInfo on friends_ask.target_id=targetInfo.id
        where
        <if test="askData.targetId != null">
            friends_ask.target_id=#{askData.targetId}
        </if>
    </select>
</mapper>